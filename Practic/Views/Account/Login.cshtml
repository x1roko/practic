@model Account

@{
    ViewData["Title"] = "Log in";
}

<div class="row">  
      <div class="col-md-4">  
          <section>  
              <form id="account" asp-controller="account" method="post" asp-action="login">  
                  <h2>use a local account to log in.</h2>  
                  <hr />  
                  <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>  
                  <div class="form-floating mb-3">  
                      <input asp-for="Login" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />  
                      <label asp-for="Login" class="form-label">email</label>  
                      <span asp-validation-for="Login" class="text-danger"></span>  
                  </div>  
                  <div class="form-floating mb-3">  
                      <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />  
                      <label asp-for="Password" class="form-label">password</label>  
                      <span asp-validation-for="Password" class="text-danger"></span>  
                  </div>  
                
                  <div>  
                      <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">log in</button>  
                  </div>  
              </form>  
          </section>  
      </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
